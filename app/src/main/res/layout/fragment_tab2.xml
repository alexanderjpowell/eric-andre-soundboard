<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shareButton"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_margin="6dp"
                android:height="80dp"
                android:background="@drawable/button_selector"
                android:text="@string/string_share"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:onClick="shareApp"/>

            <Button
                android:id="@+id/suggestNewSoundButton"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_margin="6dp"
                android:height="80dp"
                android:background="@drawable/button_selector"
                android:text="@string/string_suggest_sound"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:onClick="suggestNewSound"/>

        </LinearLayout>

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:text="@string/string_thanks"/>

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"/>

        <Button
            android:id="@+id/randomSoundButton"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:layout_margin="6dp"
            android:height="80dp"
            android:background="@drawable/button_selector"
            android:text="@string/string_random"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:onClick="playSoundEffect"/>

        <!--<Space
            android:layout_width="1dp"
            android:layout_height="10dp"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volumeBar" />-->

    </LinearLayout>
</ScrollView>